<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gmpillatt.upsanddowns.ConfirmUpsDowns">

    <TextView
        android:text="TextView"
        app:layout_marginStartPercent="30%"
        app:layout_widthPercent="40%"
        app:layout_aspectRatio="100%"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/tvChoice"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorDown"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
        android:textSize="30sp"
        android:textAllCaps="false" />

    <CheckBox
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbWidebeam"
        android:layout_alignBaseline="@+id/tvAnchor"
        android:layout_alignBottom="@+id/tvAnchor"
        android:layout_alignStart="@+id/tvAnchor"
        android:visibility="invisible"
        android:layout_marginStart="5dp"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <Button
        android:text="Confirm"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="62dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpDownConfirm"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorConfirm"
        android:onClick="confirmLock" />

    <TextView
        android:text=""
        android:layout_below="@id/tvChoice"
        android:layout_marginTop="50dp"
        android:maxWidth="0dp"
        android:id="@+id/tvAnchor"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textAppearance="@android:style/TextAppearance.Material.Small" />

    <TextView
        android:text="Widebeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWidebeam"
        android:visibility="invisible"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_alignBaseline="@+id/tvAnchor"
        android:layout_alignBottom="@+id/tvAnchor"
        android:layout_alignEnd="@+id/tvAnchor"
        android:layout_marginEnd="5dp"/>

</android.support.percent.PercentRelativeLayout>